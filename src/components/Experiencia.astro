---
import { experienciaData } from '@/lib/data'
import SectionHeading from './shared/SectionHeading.astro'
import ExperienciaCards from './ExperienciaCards.astro'
import SectionComponent from './shared/SectionComponent.astro'
---

<SectionComponent identificador='experiencia' className='text-left'>
        <SectionHeading title='Mi Experiencia' />

        <ol class='relative border-gray-200 border-s dark:border-gray-700'>
            {
                experienciaData.map(({ titulo, empresa, linkEmpresa, fecha, descripcion, icon }) => (
                    <ExperienciaCards
                        titulo={titulo}
                        empresa={empresa}
                        linkEmpresa={linkEmpresa}
                        fecha={fecha}
                        descripcion={descripcion}
                        icon={icon}
                    />
                ))
            }
        </ol>
</SectionComponent>
